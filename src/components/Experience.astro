---
// Experience section showcasing career highlights
const experiences = [
  {
    title: "Advisor (R5) – Advanced Intelligence",
    company: "Eli Lilly & Company",
    period: "April 2018 – Present",
    highlights: [
      "Chapter Lead for Advanced Intelligence Software Engineering team, driving capabilities in cloud architecture, machine learning engineering, DevOps, UI/UX, and data visualization",
      "Lead architect for BioNova drug discovery project enabling de novo molecular design on high-performance computing clusters",
      "Architect for E&C email monitoring and Veeva Approved Email Free Text compliance monitoring solutions",
      "Introduced continuous delivery patterns accelerating time to value for dozens of projects across clinical, laboratory, medical affairs, and financial spaces",
      "Mentor technical teams on AWS best practices, software development, and enterprise integration strategies",
      "Received 1 Top 100 Innovator award, 3 Innovation awards, and 2 Techy awards"
    ]
  },
  {
    title: "Data Solutions Consultant",
    company: "Fusion Alliance",
    period: "June 2012 – March 2018",
    highlights: [
      "Designed and delivered comprehensive business intelligence systems and data warehousing solutions for healthcare, pharmaceutical, and consumer finance clients",
      "Advised clients on secure architecture patterns to protect sensitive data",
      "Led implementation of big data platforms for large-scale enterprise data processing",
      "Created production-quality applications in multiple technologies (AngularJS, C#, NodeJS, Ruby on Rails)",
      "Trained software and data developers on best practices, SOLID principles, and advanced testing methodologies"
    ]
  },
  {
    title: "Software Developer",
    company: "Daniel Associates Inc.",
    period: "May 2008 – June 2012",
    highlights: [
      "Led design and implementation of server infrastructure and cloud-based services",
      "Developed line of business applications and integrated databases for multiple government agencies",
      "Automated continuous delivery pipelines across development, staging, and production environments"
    ]
  }
];
---

<section id="experience" class="experience">
  <div class="container">
    <h2 class="section-title">Professional Experience</h2>
    <div class="timeline">
      {experiences.map((exp, index) => (
        <div class="timeline-item">
          <div class="timeline-marker"></div>
          <div class="timeline-content">
            <div class="experience-header">
              <div>
                <h3 class="experience-title">{exp.title}</h3>
                <p class="experience-company">{exp.company}</p>
              </div>
              <span class="experience-period">{exp.period}</span>
            </div>
            <ul class="experience-highlights">
              {exp.highlights.map((highlight) => (
                <li>{highlight}</li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .experience {
    padding: var(--spacing-2xl) var(--spacing-md);
    background-color: var(--color-bg-alt);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-title {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: var(--spacing-xl);
    color: var(--color-text);
    position: relative;
  }

  .section-title::after {
    content: '';
    display: block;
    width: 60px;
    height: 4px;
    background: linear-gradient(90deg, #667eea, #764ba2);
    margin: var(--spacing-md) auto 0;
    border-radius: 2px;
  }

  .timeline {
    position: relative;
    padding-left: 2rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
    border-radius: 2px;
  }

  .timeline-item {
    position: relative;
    padding-bottom: var(--spacing-xl);
  }

  .timeline-item:last-child {
    padding-bottom: 0;
  }

  .timeline-marker {
    position: absolute;
    left: -2.5rem;
    top: 0.5rem;
    width: 16px;
    height: 16px;
    background: white;
    border: 3px solid #667eea;
    border-radius: 50%;
    box-shadow: 0 0 0 4px var(--color-bg-alt);
  }

  .timeline-content {
    background: white;
    padding: var(--spacing-lg);
    border-radius: var(--border-radius);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: var(--transition);
  }

  .timeline-content:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
    transform: translateX(4px);
  }

  .experience-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--spacing-md);
    gap: var(--spacing-md);
  }

  .experience-title {
    font-size: 1.5rem;
    color: var(--color-text);
    margin-bottom: var(--spacing-xs);
  }

  .experience-company {
    font-size: 1.125rem;
    color: var(--color-primary);
    font-weight: 600;
    margin: 0;
  }

  .experience-period {
    font-size: 0.9rem;
    color: var(--color-secondary);
    font-weight: 500;
    white-space: nowrap;
    padding: 0.25rem 0.75rem;
    background-color: var(--color-bg-alt);
    border-radius: 20px;
  }

  .experience-highlights {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .experience-highlights li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text-light);
    line-height: 1.7;
  }

  .experience-highlights li::before {
    content: '▹';
    position: absolute;
    left: 0;
    color: var(--color-primary);
    font-weight: bold;
  }

  .experience-highlights li:last-child {
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .experience {
      padding: var(--spacing-xl) var(--spacing-md);
    }

    .section-title {
      font-size: 2rem;
    }

    .timeline {
      padding-left: 1.5rem;
    }

    .timeline-marker {
      left: -2rem;
    }

    .experience-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .experience-title {
      font-size: 1.25rem;
    }

    .experience-period {
      align-self: flex-start;
    }

    .timeline-content {
      padding: var(--spacing-md);
    }
  }
</style>
